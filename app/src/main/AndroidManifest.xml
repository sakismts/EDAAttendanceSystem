<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mts.athanasiosmoutsioulis.edaattendancesystem" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="com.android.alarm.permission.SET_ALARM" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity android:name=".LoginActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".FacebookActivity"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".ScheduleActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity"
            android:label="@string/title_activity_schedule"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>

        <service
            android:name=".MyIntentService"
            android:exported="false" >
        </service>
        <service
            android:name=".MyServiceTest"
            android:enabled="true"
            android:exported="false" >
        </service>
        <!-- Register the Alarm Receiver -->
        <receiver android:name=".AlarmReciever" >
            <intent-filter>
                <action android:name="com.mts.athanasiosmoutsioulis.alarm.notifier" />
//this should be unique string as action
            </intent-filter>
        </receiver>

        <service
            android:name=".DownloadBeaconIdsService"
            android:enabled="true"
            android:exported="true" >
        </service>

        <activity android:name=".ManualAttendance"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity">

        </activity>
        <activity android:name=".FeedBackList"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity android:name=".FacebookList"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity android:name=".LectureDetails"
            android:launchMode="singleTop"
            android:parentActivityName=".ScheduleActivity">
        </activity>
        <activity
            android:name=".MyModules"
            android:label="@string/title_activity_my_modules"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity android:name=".AvailableModules"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity android:name=".AttendancesList"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity android:name=".TeacherAttendanceSheet"
            android:parentActivityName=".AttendancesList">
        </activity>
        <activity android:name=".TeacherFeedBackActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity android:name=".TeacherFeedbackSheetActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".TeacherFeedBackActivity">
        </activity>
        <activity android:name=".ChartActivity"
            android:launchMode="singleTop"
            android:parentActivityName=".MainActivity">
        </activity>
        <activity android:name=".WelcomeActivity"
            android:theme="@style/AppTheme.NoActionBar">

        </activity>
    </application>

</manifest>
